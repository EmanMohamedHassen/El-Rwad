@inherits System.Web.Mvc.WebViewPage<SmartGate.ElRwad.ViewModel.BranchesVM>


<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">إضافه /تعديل فرع</h4>
            </div>
            <div class="modal-body">
                <form id="Branch-form" method="post" enctype="multipart/form-data"> 
                    < div class="row">
                    <input type="hidden" id="branchId" name="branchId" value="@Model.Id" />
                    <div class="form-group col-md-6">
                        <label>
                            اسم الفرع بالعربي
                        </label>
                        <input type="text" class="form-control" id="branchArName" name="branchArName" value="@Model.BranchName_A" required />
                    </div>

                    <div class="col-md-6">
                        <label>
                            اسم الفرع بالانجليزى
                        </label>

                        <input type="text" class="form-control" id="branchEnName" name="branchEnName" value="@Model.BranchNameE" required />
                    </div>

                    <div class="col-md-6">
                        <label>
                            إسم الشركة
                        </label>

                        <select id="branchCompanyId" class="form-control" name="branchCompanyId" value="@Model.CompanyId">
                            <option selected disabled hidden style='display: none' value=''>
                                اختار شركة ....
                            </option>
                        </select>

                    </div>
                    <div class="col-md-6">
                        <label>
                            مسئول الفرع
                        </label>
                        <select class="form-control" id="branchManager" name="branchManager" value="@Model.ManagerId">
                            <option selected disabled hidden style='display: none' value=''>
                                اختار مسئول للفرع ....
                            </option>
                        </select>

                    </div>

                    <div class="col-md-12">
                        <label>
                            العنوان
                        </label>
                        <textarea id="branchLocation" name="branchLocation" class="form-control" value="@Model.BranchLocation"></textarea>

                    </div>

                    <div class="col-md-12">
                        <label>
                            الوصف
                        </label>
                        <textarea id="branchDescription" name="branchDescription" class="form-control" value="@Model.BranchDescription"></textarea>
                    </div>
                    <div class="col-md-12">
                        <label>
                            صورة
                        </label>
                        <input type="file" id="branchImage" name="branchImage" class="form-control" value="@Model.BranchImage" />
                    </div>

