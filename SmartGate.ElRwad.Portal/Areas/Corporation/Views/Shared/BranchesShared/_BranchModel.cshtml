                <div class="row">
                    <div class="col-md-8">
                        <input type="file" name="branchImage" id="branchImage" />
                    </div>
                    <div class="col-md-4">
                        <img src="" id="Image_Path_show" style="width:40px;height:40px;border-radius:3px !important" />
                    </div>
                </div>
            </div>*@
</div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">إغلاق</button>
                <button type="button" class="btn btn-success" id="btn-save" onclick="Branch.save()">حفظ</button>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Areas/Corporation/Scripts/Branch.js"></script>

